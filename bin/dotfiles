#!/usr/bin/env bash

export DOTFILES=$HOME/.dotfiles

echo "› Updating dotfiles installation."

# Set OS X defaults
$DOTFILES/osx/set-defaults.sh

# Install homebrew
$DOTFILES/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update."
brew update

# Install software
echo "› $DOTFILES/script/update"
$DOTFILES/script/update
